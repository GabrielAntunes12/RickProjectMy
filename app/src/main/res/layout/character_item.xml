<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_click"
    android:padding="10dp"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_marginVertical="10dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_back_char"
            />

        <ImageView
            android:id="@+id/image_character"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@id/circle"
            android:layout_alignTop="@id/circle"
            android:layout_alignBottom="@id/circle"
            android:layout_alignEnd="@+id/circle"
            android:layout_marginVertical="10dp"
            />
        <TextView
            android:id="@+id/name_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_character"
            android:text="NameCharacter"
            android:textSize="25sp"
            android:fontFamily="@font/upandown"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/status_character"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:layout_below="@+id/name_character"
            android:layout_toRightOf="@+id/image_character"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>